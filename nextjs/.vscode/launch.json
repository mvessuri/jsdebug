{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "nvm use 18 ; yarn dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3030",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/",
        "!/node_modules/**"
      ],
    },
  ],
  "compounds": [
    {
      "name": "Next: Full",
      "configurations": [
        "Next.js: debug server-side",
        "Next.js: debug client-side"
      ]
    }
  ]
}
